<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    
                <Button
                android:id="@+id/btnManageAccount"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnInventory"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/ic_action_person" 
                android:text="@string/btnManageAccount" />

            <Button
                android:id="@+id/btnPet"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnManageAccount"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_action_favorite"
                android:text="@string/btnPet"  />

            <Button
                android:id="@+id/btnInventory"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/ic_action_view_as_grid" 
                android:text="@string/btnInventory" />

</RelativeLayout>
